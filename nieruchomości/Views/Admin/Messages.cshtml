@using System.Data.SqlTypes
@using PagedList.Mvc
@model PagedList.PagedList<Models.EntityModels.Mail>

<div class="row" style="margin-right: 15px">
    <div class="col-md-12 custom-center-panel" style="margin-left: 15px">
        @Html.Partial("AdminMenu")
        <h4>Lista wiadomości</h4>
        <div class="row">
            <div class="col-md-12" style="font-size: small">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Data dodania
                            </th>
                            <th>
                                Imię i nazwisko
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Pytanie o nieruchomość
                            </th>
                            <th>

                            </th>
                            <th>
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ad in Model.OrderByDescending(x => x.CreatedAt))
                        {

                            <tr>
                                <td style="vertical-align:middle">@ad.CreatedAt</td>
                                <td style="vertical-align:middle">@ad.FullName</td>
                                <td style="vertical-align:middle">@ad.Email</td>
                                <td style="vertical-align: middle">
                                    @if (String.IsNullOrEmpty(ad.OrderLink))
                                    {
                                        <span class="glyphicon glyphicon-remove"></span>
                                    }
                                    else
                                    {
                                        <span class="glyphicon glyphicon-ok"></span>
                                    }
                                </td>
                                <td style="vertical-align: middle">
                                    <a href="/Admin/Message/@ad.Id">
                                        <button class="btn btn-sm">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </a>
                                </td>
                                <td>
                                    @Html.ActionLink("Usuń", "DeleteMessage", "Admin", new { id = ad.Id }, new { @class = "btn btn-primary btn-xs", @onclick = "return confirm('Napewno usunąć to ogłoszenie?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <small>Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount</small>
                <div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("Messages", new { page }))</div>
            </div>
        </div>
    </div>
</div>