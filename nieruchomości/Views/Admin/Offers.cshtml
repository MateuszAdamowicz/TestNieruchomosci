@using System.Data.SqlTypes
@using Models.ViewModels
@using nieruchomości.Helpers
@using PagedList.Mvc
@model PagedList.PagedList<Models.EntityModels.Offer>

<div class="row" style="margin-right: 15px">
    <div class="col-md-12 custom-center-panel" style="margin-left: 15px">
        @Html.Partial("AdminMenu")
        <h4>Lista ofert</h4>
        <div class="row">
            <div class="col-md-12" style="font-size: small">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Data dodania
                            </th>
                            <th>
                                Imię i nazwisko
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Rodzaj nieruchomości
                            </th>
                            <th>
                                Miasto
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ad in Model)
                        {
                            string clas;
                            if (ad.Status == OfferStatus.New)
                            {
                                clas = "active";
                            }
                            else if (ad.Status == OfferStatus.Accepted)
                            {
                                clas = "success";
                            }
                            else
                            {
                                clas = "danger";
                            }

                            <tr class="@clas">
                                <td style="vertical-align:middle">@ad.CreatedAt.ToShortDateString()</td>
                                <td style="vertical-align:middle">@ad.FullName</td>
                                <td style="vertical-align:middle">@ad.Email</td>
                                <td style="vertical-align:middle">@EnumNameHelper.GetAdType(ad.AdType)</td>
                                <td style="vertical-align:middle">@ad.City</td>
                                <td>
                                    <a class="btn btn-success btn-xs" href="/Admin/Offer?id=@ad.Id">
                                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                    </a>
                                    <a class="btn btn-danger btn-xs" href="/Admin/DeleteOffer?id=@ad.Id" onclick="return confirm('Na pewno usunąć tą ofertę?');">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <small>Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount</small>
                <div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("Offers", new { page}))</div>
            </div>
        </div>
    </div>
</div>