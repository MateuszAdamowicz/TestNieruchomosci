@model PagedList.IPagedList<Worker>
@using Models.EntityModels
@using PagedList
@using PagedList.Mvc;
@{
    ViewBag.Title = "Workers";
}
<div class="row" style="margin-right: 15px">
    <div class="col-md-12 custom-center-panel" style="margin-left: 15px">
        @Html.Partial("AdminMenu")
        @*@if (Model.Response != null && Model.Response.Success)
        {
            <div class="row" style="padding: 10px">
                <div class="col-md-12">
                    <div class="alert alert-dismissable alert-warning">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        <span class="glyphicon glyphicon-ok" style="margin-right:20px"></span><strong>@Model.Response.Message</strong>
                    </div>
                </div>
            </div>
        }*@
        <h4>Pracownicy</h4>

        <p>
            @Html.ActionLink("Dodaj pracownika", "AddWorker")
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Nazwisko
                    </th>
                    <th>
                        Imię
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Data dodania
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.CreatedAt.ToShortDateString()
                        </td>
                        <td style="text-align: center">
                            <a class="btn btn-success btn-xs" href="/Admin/Worker?id=@item.Id">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </a>
                            <a class="btn btn-default btn-xs" href="/Admin/EditWorker?id=@item.Id">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a class="btn btn-danger btn-xs" href="/Admin/DeleteWorker?id=@item.Id" onclick="return confirm('Na pewno usunąć tego pracownika?');">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <small>Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount</small>
        <div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("Workers", new { page }))</div>
        <h4>Legenda</h4>
        <div class="row">
            <div class="col-md-12" style="font-size: small">
                <span class="btn btn-success btn-xs disabled" style="opacity: 1; width:80px">
                    <span class="glyphicon glyphicon-search"></span>
                    Podgląd
                </span>
                <span class="btn btn-default btn-xs disabled" style="opacity: 1; width:80px">
                    <span class="glyphicon glyphicon-search"></span>
                    Edytuj
                </span>
                <span class="btn btn-danger btn-xs disabled" style="opacity: 1; width:80px">
                    <span class="glyphicon glyphicon-trash"></span>
                    Usuń
                </span>
            </div>
        </div>
    </div>
    

</div>
