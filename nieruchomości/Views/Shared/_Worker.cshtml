@model Models.ViewModels.ShowWorker


<div class="row" style="margin-top: 20px; font-size: large;">
    <div class="col-md-12">
        <span class="glyphicon glyphicon-user" style="margin-right: 10px;"></span>
        <b>Pracownik prowadzący</b>
    </div>
</div>
<div class="row" style="font-size:12px">
    <div class="col-md-3">
        @if (Model.HasPhoto)
        {
            <img src="/Content/Photos/Workers/min_@(Model.Photo)" style="width: 100%; border:1px solid white"/>
        }
        else
        {
            <img src="/Content/img/brakzdjecia.png" style="width: 100%"/>
        }
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">Imię i nazwisko:</div>
            <div class="col-md-6">@Model.FullName</div>
        </div>
        <div class="row">
            <div class="col-md-6">Numery telefonów:</div>
            <div class="col-md-6">@Model.PhoneFirst, @Model.PhoneSecond</div>
        </div>
        <div class="row">
            <div class="col-md-6">E-mail:</div>
            <div class="col-md-6">@Model.Email</div>
        </div>
    </div>
</div>