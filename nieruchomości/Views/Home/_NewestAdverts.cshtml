@using Models.ViewModels
@using nieruchomości.Helpers
@model IEnumerable<Models.ViewModels.NewestAdvert>

@foreach (var advert in Model)
{
    <div class="row" style="margin-bottom:20px">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">

                            @if (advert.ToLet)
                            {
                                <small>Do wynajęcia: <b>@EnumNameHelper.GetAdType(advert.AdType)</b></small>
                            }
                            else
                            {
                                <small>Na sprzedaż: <b>@EnumNameHelper.GetAdType(advert.AdType)</b></small>
                            }

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <small><b>@advert.City</b></small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    <img src="http://nieruchomoscijeleniogorskie.somee.com/Content/img/the-palace-of-culture.jpg" style="width: 100%; border: 1px solid white;" />
                </div>
                <div class="col-md-2">
                    <div class="row">
                        <span class="glyphicon glyphicon-camera" style="font-size: 1.5em"></span>
                    </div>
                    <div class="row" style="margin-top: 5px">
                        <span class="glyphicon glyphicon-map-marker" style="font-size: 1.5em"></span>
                    </div>
                    <div class="row" style="margin-top: 5px">
                        <span class="glyphicon glyphicon-user" style="font-size: 1.5em"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <small>Cena: <b><span class="price-amount">@advert.Price</span> PLN</b></small>
                </div>
            </div>
        </div>
    </div>
}