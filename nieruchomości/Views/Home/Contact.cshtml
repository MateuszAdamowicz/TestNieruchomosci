                    </p>
                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group-sm">
                            <div class="row">
                                <div class="custom-advert-panel-title">
                                    Dane klienta
                                </div>
                                <div class="custom-advert-panel-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <small>Imię i nazwisko</small>
                                            <div class="has-feedback">
                                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @style = "max-width:none" + ((ViewData.ModelState.ContainsKey("FullName") && ViewData.ModelState["FullName"].Errors.Count > 0) ? ";border: 2px solid red" : "") } })
                                                <span class="glyphicon-small glyphicon-asterisk form-control-feedback" aria-hidden="true" style="right:0"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <small>Email</small>
                                            <div class="has-feedback">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "max-width:none" + ((ViewData.ModelState.ContainsKey("Email") && ViewData.ModelState["Email"].Errors.Count > 0) ? ";border: 2px solid red" : "") } })
                                                <span class="glyphicon-small glyphicon-asterisk form-control-feedback" aria-hidden="true" style="right:0"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <small>Telefon</small>
                                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @style = "max-width:none" + ((ViewData.ModelState.ContainsKey("PhoneNumber") && ViewData.ModelState["PhoneNumber"].Errors.Count > 0) ? ";border: 2px solid red" : "") } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="custom-advert-panel-title">
                                    Napisz czego szukasz
                                </div>
                                <div class="custom-advert-panel-body">
                                    <div class="has-feedback">
                                        @Html.TextAreaFor(model => model.Body, new { @class = "form-control", @style = "max-width:none; height: 200px" + ((ViewData.ModelState.ContainsKey("Body") && ViewData.ModelState["Body"].Errors.Count > 0) ? ";border: 2px solid red" : "") })
                                        <span class="glyphicon-small glyphicon-asterisk form-control-feedback" aria-hidden="true" style="right:0"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="text-align:center">
                                <button type="submit" class="btn btn-sm btn-success" style="width:100px">Wyślij</button>
                            </div>
                        </div>
                    }
                </div>
            </div>


        </div>
    </div>
</div>