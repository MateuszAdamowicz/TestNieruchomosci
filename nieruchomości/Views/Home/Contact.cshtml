@model Models.ContactEmail

@{
    ViewBag.Title = "View";
}
<div class="row" style="margin-right: 15px">
    <div class="col-md-12 custom-center-panel" style="margin-left: 15px">
        <h4>Szybki kontakt</h4>


        <div class="col-md-12">
@if (!ViewData.ModelState.IsValid)
{
    <div class="row" style="padding: 10px">
        <div class="panel panel-danger">
            <button type="button" class="close" data-dismiss="alert" style="margin-right:5px; margin-top: 5px">×</button>
            <div class="panel-heading">
                Błąd
            </div>
            <div class="panel-body">
                @Html.ValidationSummary()
            </div>
        </div>
    </div>
}

            <div class="row">
                <div class="col-md-6" style="padding-left:0px">
                    <div class="custom-advert-panel-title">Jak to działa?</div>
                    <p class="custom-advert-panel-body">
